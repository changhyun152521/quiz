# Server Port
PORT=5000

# MongoDB Connection String
# MongoDB Atlas URL (우선 사용)
# MongoDB Atlas 예시: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_ATLAS_URL=your_mongodb_atlas_connection_string_here

# MongoDB URI (MONGODB_ATLAS_URL이 없을 때 사용)
# 로컬 MongoDB 예시: mongodb://localhost:27017/dbname
MONGODB_URI=your_mongodb_connection_string_here

# 참고: MONGODB_ATLAS_URL과 MONGODB_URI 둘 다 없으면 기본값으로 mongodb://localhost:27017/quiz 사용

# 기타 환경변수
NODE_ENV=development

# JWT Secret Key (프로덕션에서는 반드시 강력한 랜덤 문자열로 변경하세요)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REMEMBER_ME_EXPIRES_IN=30d

# Cloudinary 설정
# Cloudinary 대시보드(https://console.cloudinary.com)에서 확인하세요
